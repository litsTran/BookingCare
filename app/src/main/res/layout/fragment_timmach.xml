                    android:typeface="serif"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="114dp"
                    android:layout_height="38dp"
